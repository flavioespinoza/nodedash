{
	"compilerOptions": {
		"moduleResolution": "node",
		"pretty": true,
		"sourceMap": true,
		"lib": ["es2016"],
		"module": "commonjs",
		"target": "es2016",
		"outDir": "./__balls/",
		"baseUrl": "/",
		"strict": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"jsx": "react",
        "declaration": true
	},
	"sourceMap": true,
	"include": ["_src/**/*.ts"],
	"exclude": ["node_modules", "_lib", "lib"]
}
